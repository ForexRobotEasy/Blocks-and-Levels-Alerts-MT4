   }
}

//+------------------------------------------------------------------+
//| Select All Objects function                                       |
//+------------------------------------------------------------------+
void SelectAllObjects()
{
   // Code to select all drawn objects
   // ...
   
   // Trigger alerts if enabled
   if (enableAlerts)
   {
      Alert('All objects selected');
